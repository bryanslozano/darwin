<link rel="stylesheet" href="{{ 'section-text-with-icons.css' | asset_url }}" type="text/css">

<section id="text-with-icons" style="background-color: {{ section.settings.background_color }}">
  <div class="section-header">
    <h2>{{ section.settings.section_heading }}</h2>
  </div>
  <div class="icons-container">
    {% for block in section.blocks %}
      <div class="icon-block">
        <img
          src="{{ block.settings.icon_image | image_url: 'medium' }}"
          alt="{{ block.settings.title }}"
          width="100"
          height="100"
        >
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Text With Icons",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Your Section Heading"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text With Icons",
      "category": "Custom"
    }
  ]
}
{% endschema %}
